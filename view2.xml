<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="FFF34E"
        android:padding="24dp">

        <!-- 1. ZONE PHOTO (En haut, centrée) -->
        <ImageView
            android:id="@+id/ivContactPhoto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="FFF34E"
            android:src="@android:drawable/ic_menu_camera"
            android:scaleType="centerInside"
            android:padding="30dp"
            app:tint="#FFFFFF"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:contentDescription="Photo du contact" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter une photo"
            android:textColor="#7F8C8D"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/ivContactPhoto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 2. ZONE NOM (Label + Input) -->
        <TextView
            android:id="@+id/tvLabelNom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom"
            android:textColor="#2C3E50"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/ivContactPhoto"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etNom"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_field"
            android:hint="Entrez le nom"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="textPersonName"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvLabelNom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 3. ZONE PRÉNOM (Label + Input) -->
        <TextView
            android:id="@+id/tvLabelPrenom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prénom"
            android:textColor="#2C3E50"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etNom"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etPrenom"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_field"
            android:hint="Entrez le prénom"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="textPersonName"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvLabelPrenom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 4. ZONE TÉLÉPHONE (Label + Input) -->
        <TextView
            android:id="@+id/tvLabelPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numéro de téléphone"
            android:textColor="#2C3E50"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etPrenom"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_field"
            android:hint="Ex: 06 12 34 56 78"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="phone"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvLabelPhone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 5. BOUTON VALIDER -->
        <Button
            android:id="@+id/btnValidate"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:text="ENREGISTRER LE CONTACT"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF6F61"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="24dp"
            app:cornerRadius="25dp"
            app:layout_constraintTop_toBottomOf="@id/etPhone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
